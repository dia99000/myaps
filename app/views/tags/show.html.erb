<div class="contents-header">
	<h2><i class="fa fa-tag" style="color: #<%= @tag.color.digits %>"></i><%= @tag.name %>の詳細ページ</h2>
</div>
<div class="contents-header">
	<h3>タグの色をセットする</h3>
</div>

	<!-- 色別のタグのフォーム -->
		<table><tbody><tr>
			<% @colors.each do |color| %>
				<% if color.hue % 20 == 0 %>
					<td>
						<%= form_for(@tag, local: true, id: 'tag-color') do |f| %>
							<%= f.hidden_field :color_id, value: color.id %>
							<%= f.button :type => "submit" do %>
								<%= colored_tag(color.digits).html_safe %>
							<% end %>
						<% end %>
					</td>
				<% end %>
			<% end %>
		<tr><tbody><table>

<div class="contents-header">
	<h3><%= colored_tag(@tag.color.digits).html_safe %><%= @tag.name %> のカード一覧</h3>
</div>
<div class="contents">
	<ul id='card-index'>
		<% @tag.cards.each do |card| %>
			<li class="card-index">
				<%= link_to card.title, card %>
			</li>
		<% end %>
	</ul>
</div>

