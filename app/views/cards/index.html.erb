<div class="contents-header">
</div>
<div class="form flexbox">
	<%= form_with(url: cards_path, method: :get, local: true) do |form| %>
		<div class="field">
			<%= form.text_field :search, :placeholder => "カードを検索..." %>
			<%= button_tag :type => "submit" do %>
				<i class="fa fa-search"></i>
			<% end %>
		</div>
	<% end %>
	<%= render 'card-form', card: @card %>
</div>

<div class="contents-header">
	<h3>最近追加されたカード一覧</h3>
</div>
<div class="contents">
	<ul>
		<% @cards.each do |card| %>
			<%= render 'common/card', card: card %>
		<% end %>
	</ul>
</div>
